{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "combining-streams": [
        "projects/combining-streams/src"
      ],
      "combining-streams/*": [
        "projects/combining-streams/src/*"
      ],
      "state-management": [
        "projects/state-management/src"
      ],
      "state-management/*": [
        "projects/state-management/src/*"
      ],
      "shared": [
        "projects/shared/src"
      ],
      "shared/*": [
        "projects/shared/src/*"
      ],
      "flattening-operators": [
        "projects/flattening-operators/src"
      ],
      "flattening-operators/*": [
        "projects/flattening-operators/src/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
